<!--
	See Unicorn.config for commentary on how configurations operate, or https://github.com/kamsar/Unicorn/blob/master/README.md
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Feature.Portfolio" description="Feature Portfolio Serialization" dependencies="Foundation.Serialization,Foundation.MultiTenant" patch:after="configuration[name='Foundation.MultiTenant']">
          <targetDataStore physicalRootPath="$(sourceFolder)\Feature\Portfolio\Serialization" type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" useDataCache="false" singleInstance="true" />
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
            <include name="Feature.Portfolio.Reanderings" database="master" path="/sitecore/layout/renderings/feature/portfolio" />
            <include name="Feature.Portfolio.Templates" database="master" path="/sitecore/templates/feature/portfolio" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>