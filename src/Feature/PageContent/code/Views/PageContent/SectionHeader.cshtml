@using Glass.Mapper.Sc.Web.Mvc
@using Helix.Feature.PageContent.Models

@model ISectionHeader

<div class="col-lg-12 text-center">
    @if (!String.IsNullOrEmpty(Model.Title) || Sitecore.Context.PageMode.IsExperienceEditorEditing)
    {
        <h2 class="section-heading">@Html.Glass().Editable(x => x.Title)</h2>
    }
    
    @if (!String.IsNullOrEmpty(Model.Description) || Sitecore.Context.PageMode.IsExperienceEditorEditing)
    {
        <h3 class="section-subheading text-muted">@Html.Glass().Editable(x => x.Description)</h3>
    }
</div>
